{{yield}}
<div class="form-group">
  <div class="col-sm-3 text-right">Title:</div>
  <div class="col-sm-9">
    {{input value=bug.title class='form-control'}}
  </div>
</div>

<div class="form-group">
  <div class="col-sm-3 text-right">Description:</div>
  <div class="col-sm-9">
    {{textarea value=bug.description class='form-control'}}
  </div>
</div>

<div class="col-sm-9 col-sm-offset-3">
  <button class='btn btn-success' {{action 'save' bug}}>Save</button>
</div>

